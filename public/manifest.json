{
  "manifest_version": 2,

  "name": "Chrome Extension TypeScript Starter",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "1.0",
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["js/background.js"]
  },

  "permissions": [
    "downloads",
    "storage",
    "http://*/"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
